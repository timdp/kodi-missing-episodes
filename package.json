{
  "name": "kodi-missing-episodes",
  "version": "0.5.1",
  "description": "Checks your Kodi (XBMC) TV library for missing episodes using TheTVDB.com.",
  "license": "MIT",
  "repository": "https://github.com/timdp/kodi-missing-episodes",
  "author": {
    "name": "Tim De Pauw",
    "url": "https://tmdpw.eu/"
  },
  "engines": {
    "node": ">=12"
  },
  "main": "kodi-missing-episodes.js",
  "scripts": {
    "start": "node kodi-missing-episodes.js",
    "test": "standard \"**/*.js\"",
    "format": "prettier-standard \"**/*.js\" && standard --fix \"**/*.js\""
  },
  "dependencies": {
    "chalk": "^4.0.0",
    "got": "^11.1.0",
    "js-yaml": "^3.6.1",
    "lodash": "^4.17.19",
    "moment": "^2.18.0",
    "q": "^1.4.1",
    "qlimit": "^0.1.1",
    "xbmc": "^0.8.0",
    "yargs": "^15.3.1"
  },
  "devDependencies": {
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "prettier-standard": "^16.3.0",
    "standard": "^14.3.3"
  },
  "lint-staged": {
    "*.js": [
      "prettier-standard",
      "standard --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
